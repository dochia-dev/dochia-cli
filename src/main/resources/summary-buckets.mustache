<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dochia - Execution Report</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <script src="chart.js"></script>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="styles-buckets.css">
    <script>
        const totalErr = parseInt('{{ERRORS}}'.replace(/ /g, ''));
        const totalWrn = parseInt('{{WARNINGS}}'.replace(/ /g, ''));
        const totalScs = parseInt('{{SUCCESS}}'.replace(/ /g, ''));
    </script>
</head>
<body>
    <!-- Navigation Header -->
    <nav class="nav-header">
        <div class="nav-content">
            <div class="nav-brand">
                <img src="assets/logo_4.svg" alt="Dochia" class="nav-logo">
                <div class="nav-title">
                    <h1>Dochia</h1>
                    <span class="nav-subtitle">Execution Report - Clustered Results</span>
                </div>
            </div>
            <div class="nav-meta">
                {{#JS}}
                <button class="theme-toggle" onclick="toggleTheme()" aria-label="Toggle dark mode">
                    <img src="assets/white-mode-icon.svg" alt="Light mode" class="theme-icon light-icon">
                    <img src="assets/dark-mode-icon.svg" alt="Dark mode" class="theme-icon dark-icon">
                </button>
                {{/JS}}
                <div class="report-badge">{{VERSION}}</div>
                <div class="report-timestamp">Generated: {{TIMESTAMP}} on {{OS}}</div>
            </div>
        </div>
    </nav>

    <!-- Compact Summary Section -->
    <section class="summary-bar">
        <div class="summary-content">
            <div class="test-overview">
                <div class="overview-stats">
                    <div class="stat-item primary">
                        <span class="stat-value">{{TOTAL}}</span>
                        <span class="stat-label">Tests</span>
                    </div>
                    <div class="stat-item success">
                        <span class="stat-value">{{SUCCESS}}</span>
                        <span class="stat-label">Passed</span>
                    </div>
                    <div class="stat-item warning">
                        <span class="stat-value">{{WARNINGS}}</span>
                        <span class="stat-label">Warnings</span>
                    </div>
                    <div class="stat-item error">
                        <span class="stat-value">{{ERRORS}}</span>
                        <span class="stat-label">Failed</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="success-rate-compact" data-success="{{SUCCESS_PERCENTAGE}}" data-percentage="{{SUCCESS_PERCENTAGE}}">
                        <span class="rate-value">{{SUCCESS_PERCENTAGE}}%</span>
                        <span class="rate-label">Success</span>
                    </div>
                </div>
            </div>
            <div class="test-config">
                <div class="config-compact">
                    <div class="config-row">
                        <span class="config-label">API:</span>
                        <code class="config-value" data-type="filename" title="{{CONTRACT_NAME}}">{{CONTRACT_NAME}}</code>
                    </div>
                    <div class="config-row">
                        <span class="config-label">Base:</span>
                        <code class="config-value" data-type="url" title="{{BASE_URL}}">{{BASE_URL}}</code>
                    </div>
                    <div class="config-row">
                        <span class="config-label">Execution:</span>
                        <code class="config-value" title="{{EXECUTION}} (avg: {{AVERAGE_RESPONSE_TIME}}ms)">{{EXECUTION}} (avg: {{AVERAGE_RESPONSE_TIME}}ms)</code>
                    </div>
                    <div class="config-row">
                        <span class="config-label">Coverage:</span>
                        <code class="config-value" title="{{PLAYBOOKS}}/{{TOTAL_PLAYBOOKS}} playbooks, {{PATHS}}/{{TOTAL_PATHS}} paths">{{PLAYBOOKS}}/{{TOTAL_PLAYBOOKS}} playbooks, {{PATHS}}/{{TOTAL_PATHS}} paths</code>
                    </div>
                </div>
            </div>
            <div class="chart-mini">
                <canvas id="heroChart" width="80" height="80"></canvas>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="dashboard">
        <!-- Clustered Results Section -->
        <section class="results-section">
            <div class="section-header">
                <h2>Clustered Results</h2>
                <div class="search-group">
                    <input type="text" class="search-input" placeholder="Search clusters...">
                    <button class="search-clear">Clear</button>
                </div>
            </div>

            <div class="results-table-container">
                {{#GROUPED_TEST_CASES}}
                <div class="cluster-card">
                    <div class="cluster-header" onclick="toggleErrorCluster(this)">
                        <div class="cluster-header-content">
                            <h3 class="cluster-title {{status}}">{{resultReason}}</h3>
                            <div class="cluster-count">
                                <span class="badge badge-buckets">{{buckets.size}} buckets</span>
                                <span class="badge badge-tests">{{totalTests}} tests</span>
                            </div>
                        </div>
                        <span class="material-icons-round cluster-toggle">expand_more</span>
                    </div>
                    <div class="cluster-content">
                        <div class="clusters-container">
                            {{#buckets}}
                            <div class="cluster-item" style="border-left: 5px solid {{borderColor}};">
                                <div class="cluster-item-header" onclick="toggleCluster(this)">
                                    <h4 class="cluster-item-title">
                                        <span class="material-icons-round cluster-icon">folder</span>
                                        <span class="bucket-title">Bucket {{bucketId}}</span>
                                    </h4>
                                    <span class="material-icons-round cluster-item-toggle">expand_more</span>
                                </div>
                                <div class="cluster-item-content">
                                    <div class="cluster-detail">
                                        <span class="detail-label">Response:</span>
                                        <code class="detail-value">{{errorMessage}}</code>
                                    </div>
                                    {{#paths}}
                                    <div class="path-group">
                                        <div class="path-header">
                                            <span class="material-icons-round path-icon">insert_link</span>
                                            <code class="path-value">{{path}}</code>
                                        </div>
                                        <div class="test-cases">
                                            <div class="test-cases-label">Test Cases:</div>
                                            <div class="test-cases-list">{{{testCases}}}</div>
                                        </div>
                                    </div>
                                    {{/paths}}
                                </div>
                            </div>
                            {{/buckets}}
                        </div>
                    </div>
                </div>
                {{/GROUPED_TEST_CASES}}
            </div>
        </section>
    </main>
    <!-- Footer -->
    <footer class="report-footer">
        <div class="footer-content">
            <div class="footer-brand">
                <img src="assets/logo_4.svg" alt="Dochia" class="footer-logo">
                <span>Powered by Dochia</span>
            </div>
            <div class="footer-info">Report generated on {{TIMESTAMP}}</div>
        </div>
    </footer>

    <script src="scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize charts if needed
            if (typeof initCharts === 'function') {
                initCharts();
            }
            
            // Search functionality
            const searchInput = document.querySelector('.search-input');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const clusters = document.querySelectorAll('.cluster-card');
                    
                    clusters.forEach(cluster => {
                        const clusterText = cluster.textContent.toLowerCase();
                        if (clusterText.includes(searchTerm)) {
                            cluster.style.display = '';
                        } else {
                            cluster.style.display = 'none';
                        }
                    });
                });
            }
        });
    </script>
</body>
</html>